/**app.wxss**/
page {
  width: 100%;
  height: 100%;
}

.banner-image{
  width: 100%;
}

.icon{
  border-radius: 20%;
  margin: 20rpx 20rpx 0;
}

.icon-container{
  display:flex;
  justify-content: space-around;
  flex-wrap: no-wrap;
}

.item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-text{
  font-size: 0.7rem;
  margin: 20rpx;
}

.icon-desc {
  font-size: 0.5rem;
  color: #4a4a4a;
  margin: 0 20rpx;
}
