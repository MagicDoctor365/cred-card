.banner-image {
  width: 100%;
}
.container{
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.goods{
  width: 29%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 20rpx 2%;
}

.goods image{
  width: 230rpx;
  height: 230rpx;
}

.desc{
  font-size: 0.6rem;
  color: grey;
  margin: 10rpx 0;
}

.price{
  font-size: 0.6rem;
  padding: 5rpx 0;
  margin: 10rpx 0;
  background-color: #D9D500;
  border-radius: 15rpx;
  color: white;
}

.point{
  font-size: 0.6rem;
  margin: 10rpx 0;
  background-color: orangered;
  border-radius: 15rpx;
  padding: 5rpx 0;
  color: white;
}

.price-point{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
