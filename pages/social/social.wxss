.container{
  padding: 20rpx;
}
.icons{
  display: flex;
  justify-content: space-around;
  border-bottom: 20rpx solid lightgray;
}
.icon{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}  
.desc{
  font-size: 0.7rem;
  color:gray;
  margin: 15rpx 0;
}
.contact{
  padding: 20rpx 10rpx;
  display:flex;
  justify-content: space-between;
  border-bottom: 1px solid lightgray;
  align-items: center;
}
.avatar-name{
  display:flex;
  align-items: center;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx 0 0;
  padding: 0;
  border-radius: 50%;
}